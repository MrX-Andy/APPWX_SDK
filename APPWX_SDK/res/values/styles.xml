<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 全屏. -->
    <style name="noTitle" parent="android:Theme.Holo.Light.NoActionBar">
        <!-- <item name="android:windowNoTitle">true</item> -->
        <item name="android:textSize">16sp</item>
    </style>

     <!-- menu drawer样式 . -->
    <style name="Widget" />
    <style name="Widget.MenuDrawer">
        <item name="mdMenuBackground">@color/md__defaultBackground</item>
        <item name="mdContentBackground">?android:attr/windowBackground</item>
        <item name="mdDrawerOpenUpContentDescription">@string/md__drawerOpenIndicatorDesc</item>
        <item name="mdDrawerClosedUpContentDescription">@string/md__drawerClosedIndicatorDesc</item>
    </style>
    
    <!-- 下拉刷新 -->
    <style name="refreshlistview_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="refreshlistview_arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:src">@drawable/xlistview_arrow</item>
    </style>

    <style name="refreshlistview_progress">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">25dp</item>
    </style>

    <style name="refreshlistview_comment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="refreshlistview_date">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="refreshlistview_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
    </style>
</resources>